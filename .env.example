# ═══ TRADING MODE ═══
# DRY_RUN=1 (default) = paper trading, no real orders
# DRY_RUN=0 = LIVE TRADING WITH REAL MONEY
# DRY_RUN=1

# ═══ POLYMARKET ═══
POLYMARKET_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# ═══ KALSHI ═══
KALSHI_API_KEY=your_api_key_here

# ═══ GEO-PROXY (for Polymarket orders from US) ═══
# ORDER_PROXY_URL=https://your-proxy.example.com/proxy
# ORDER_PROXY_TOKEN=your_secret_token

# ═══ CIRCUIT BREAKER (optional — sensible defaults below) ═══
# MAX_DAILY_LOSS_CENTS=2000         # $20 max daily loss (default)
# MAX_POSITION_PER_MARKET=30        # contracts per market (default)
# MAX_TOTAL_POSITION=100            # total contracts (default)
# MAX_CONSECUTIVE_ERRORS=3          # trip after N failures (default)

# ═══ RESOLUTION CHECKER (LLM-powered) ═══
# Compares resolution criteria between platforms before trading
# Set to enable automatic resolution mismatch detection
# ANTHROPIC_API_KEY=sk-ant-...

# ═══ ALERTS (optional) ═══
# GMAIL_USER=your_email@gmail.com
# GMAIL_APP_PASSWORD=your_app_password
# ALERT_EMAIL_TO=your_email@gmail.com
# ALERT_WEBHOOK_URL=               # Discord/Slack webhook
